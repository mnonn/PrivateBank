<div class="form-container row pull-left">
  <h2><%= current_user.username.to_s %> anpassen</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :benutzername %>
      <%= f.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Bestätigung notwendig für: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :passwort %> <i>(optional)</i>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-groupe">
      <%= f.label :passwort_bestätigen %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :aktuelles_passwort %>
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
    </div>

    <%= f.submit "Bestätigen", class: "btn btn-default"%>

  <% end %>

  <h3>Account löschen</h3>

  <p>Unzufrieden? <div class="actions"><%= button_to "Account löschen", registration_path(resource_name), data: { confirm: "Sind sie sicher?" }, method: :delete %></div></p>

  <%= link_to "zurück", :back %>
</div>
