<div class="form-container row pull-left">
  <h2>Benutzerinformationen für <%= resource_name.to_s.humanize %> anpassen</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :benutzername %><br />
      <p class="textfield"><%= f.text_field :username %></p>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <p class="textfield"><%= f.email_field :email, autofocus: true %></p>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Bestätigung notwendig für: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :passwort %> <i>(nicht ausfüllen, wenn keine Änderung gewünscht ist)</i><br />
      <p class="textfield"><%= f.password_field :password, autocomplete: "off" %></p>
    </div>

    <div class="field">
      <%= f.label :passwort_bestätigen %><br />
      <p class="textfield"><%= f.password_field :password_confirmation, autocomplete: "off" %></p>
    </div>

    <div class="field">
      <%= f.label :aktuelles_passwort %> <i>(Ihr aktuelles Passwort wird als Bestätigung benötigt)</i><br />
      <p class="textfield"><%= f.password_field :current_password, autocomplete: "off" %></p>
    </div>

    <div class="actions">
      <%= f.submit "Bestätigen" %>
    </div>
  <% end %>

  <h3>Account löschen</h3>

  <p>Unzufrieden? <div class="actions"><%= button_to "Account löschen", registration_path(resource_name), data: { confirm: "Sind sie sicher?" }, method: :delete %></div></p>

  <%= link_to "zurück", :back %>
</div>
