<div  class="form-container pull-left">
<h2>Account freischalten</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <p class="textfield"><%= f.email_field :email, autofocus: true %></p>
  </div>

  <div class="actions">
    <%= f.submit "Freischaltung beauftragen" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
