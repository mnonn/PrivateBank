<div class='form-container'>
<%= simple_form_for [forem, :admin, @forum] do |f| %>
  <p class="textfield"><%= f.association :category, :include_blank => false %></p>
  <p class="textfield"><%= f.input :title, :class => 'textfield' %></p>
  <p class="textfield"><%= f.input :position %></p>
  <p class="textfield"><%= f.input :description, :as => :text %></p>

  <h3><%= t('forem.admin.forum.moderator_groups') %></h3>
  <%= f.association :moderators, :as => :check_boxes %>
  <%= f.submit :class => "btn btn-primary" %>
<% end %>
</div>

