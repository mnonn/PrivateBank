<div class="form-container row pull-left">
  <h2>Registrieren:</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :username %><br />
      <p class="textfield"><%= f.text_field :username %></p>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <p class="textfield"><%= f.email_field :email%></p>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <p class="textfield"><%= f.password_field :password, autocomplete: "off" %></p>
      <% if @validatable %>
        <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <p class="textfield"><%= f.password_field :password_confirmation, autocomplete: "off" %></p>
    </div>

    <%= f.submit "Registrieren", class: 'submit-btn btn btn-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>