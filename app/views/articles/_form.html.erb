<div class="form-container row pull-left" style="width: 700px;">
  <%= form_for @article do |f| %>
   
    <% if @article.errors.any? %>
      <div class="error_explanation">
        <h2>
          <%= pluralize(@article.errors.count, "error") %> Vorgang abgebrochen:
        </h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
   
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :text %>
      <%= f.text_area :text, class: "form-control", rows: "10" %>
    </div>
    <%= render('shared/bbcode') %>
    <%= f.submit "Erstellen", class: "btn btn-default" %>

   
<% end %>
