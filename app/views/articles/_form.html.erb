<div class="form-container row pull-left">
  <%= form_for @article do |f| %>
   
    <% if @article.errors.any? %>
      <div class="error_explanation">
        <h2>
          <%= pluralize(@article.errors.count, "error") %> Vorgang abgebrochen:
        </h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
   
    <p>
      <%= f.label :title %><br>
      <p class="textfield"><%= f.text_field :title %></p>
    </p>
   
    <p>
      <%= f.label :text %><br>
      <p class="textfield"><%= f.text_area :text %></p>
    </p>
   
    <p>
      <div class="actions"><%= f.submit %></div>
    </p>
   
<% end %>
